<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003" ToolsVersion="4.0" DefaultTargets="Build">
  
  <Import Project="RestLess.props" />  
  
  <Target Name="GenerateRestClients" BeforeTargets="CoreCompile">
    <BuildRestClientsTask SourceFiles="@(Compile)"/>
    <Message Text="Processed RestLess Stubs" />
  </Target>
  
  <ItemGroup>
    <Compile Update="**\*.g.rl.cs" DependentUpon="$([System.String]::Copy('%(Filename)').Replace('.g.rl', ''))%(Extension)" SubType="Code"/>
  </ItemGroup>
  
</Project>