<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003" ToolsVersion="4.0" DefaultTargets="Build">
  
  <Import Project="DoLess.Rest.props" />  
  
  <Target Name="GenerateRestClients" BeforeTargets="CoreCompile">
    <BuildRestClientsTask SourceFiles="@(Compile)"/>
    <Message Text="Processed DoLess.Rest Stubs" />
  </Target>
  
  <ItemGroup>
    <Compile Update="**\*.g.dl.rest.cs" DependentUpon="$([System.String]::Copy('%(Filename)').Replace('.g.dl.rest', ''))%(Extension)" SubType="Code"/>
  </ItemGroup>
  
</Project>